<div class="row">
    <div class="col-12 col-md-6 offset-md-3">
        <h4 class="text-center text-primary border-bottom">Authors</h4>
        <form method="GET" action="/author">
            <div class="form-row align-items-center">

                <div class="col-auto">
                    <input type="text" class="form-control mb-2" id="name" name="name" value="<%= searchOptions.name %>">
                </div>

                <div class="col-auto">
                    <button type="submit" class="btn btn-primary mb-2">Search</button>
                </div>
            </div>
        </form>


        <% authors.forEach(author => { %>
            <div class="row">
                <div class="col-6">
                    <%= author.name %>
                </div>
                <div class="col-3 text-right">
                    Edit
                </div>
                <div class="col-3 text-right">
                    Delete
                </div>

            </div>
            <% }); %>
    </div>


</div>