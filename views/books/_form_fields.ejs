<div class="form-row">
    <div class="col">
        <label for="title">Title</label>
        <input type="text" class="form-control" name="title" value="<%= book.title %>" required>
    </div>
    <div class="col">
        <label for="sel1">Author:</label>
        <select class="form-control" name="author" required>
            <option value="">Select Author</option s>
          <% authors.forEach(author => { %>
          <% if (author.id === book.author) { %>
          <option value="<%= author._id %>" selected> <%= author.name %> </option>
          <% } else { %>
            <option value="<%= author._id %>"> <%= author.name %> </option>
            <% } %>
          <% }); %>
        </select>
    </div>
</div>

<div class="form-row">
    <div class="col">
        <label for="publishDate">Publish Date:</label>
        <input type="date" class="form-control" name="publishDate" value="<%=
        book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>" required>
    </div>
    <div class="col">
        <label for="title">Pages:</label>
        <input type="text" class="form-control" name="noOfPages" value="<%= book.noOfPages %>" required>
    </div>
</div>

<div class="form-row">
    <div class="col">
        <label for="coverPage">Cover:</label>
        <input type="file" class="form-control" name="coverPage" required>
    </div>
</div>
<div class="form-row">
    <div class="col">
        <label for="description">Description:</label>
        <textarea name="description" id="" cols="30" rows="5" class="form-control" required><%= book.description %> </textarea>
    </div>
</div>
<div class="mt-2">
    <button type="submit" class="btn btn-primary">Add</button>
    <a href="/book" class="btn btn-warning"> Cancel</a>
</div>